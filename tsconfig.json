{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "typeRoots": [
      "./types"
    ],
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules"]
}
